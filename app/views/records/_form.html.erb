<h1><%= @record.habit.title %>の記録</h1>

  <%= simple_form_for(@record, url: [@record.habit, @record]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :habit_id, as: :hidden %>
    <%= f.input :record_at, as: :hidden %>
    <%= f.input :value %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to 'Back', root_path %>
