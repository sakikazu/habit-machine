<div class="toast <%= 'toast-error' if is_error %>" data-autohide="true" data-delay="<%= is_error ? '3000' : '1500' %>" style="width: 300px; z-index: 2000; position: absolute; top: 30px; right: 30px;">
  <div class="toast-header">
    <strong class="mr-auto">通知</strong>
    <small>たったいま</small>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body">
    <%= message %>
  </div>
</div>
