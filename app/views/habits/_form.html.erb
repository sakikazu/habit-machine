<%= simple_form_for(@habit) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :goal %>
    <%= f.input :graph_type %>
    <%= f.input :data_type %>
    <%= f.input :data_unit %>
    <%= f.input :reminder %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
