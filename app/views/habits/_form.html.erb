<%= simple_form_for(@habit) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: "習慣のタイトル" %>
    <%= f.input :goal, label: "目標", input_html: {rows: 3} %>
    <%= f.input :graph_type, label: "グラフのタイプ", collection: Habit::GRAPH_TYPE %>
    <%= f.input :data_type, label: "値のタイプ", collection: Habit::VALUE_TYPE %>
    <%= f.input :data_unit, label: "値の単位" %>
    <%= f.input :reminder %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
