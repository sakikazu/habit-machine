<div class="row justify-content-center mt15">
  <div class="col-sm-2">
  	<div class="card">
      <ul class="list-group list-group-flush">
    		<% @diaries.each do |diary| %>
    		  <li class="list-group-item"><%= link_to "#{dispdate(diary.record_at, false)} #{diary.title_mod}", "#diary#{diary.id}" %></li>
    		<% end %>
			</ul>
  	</div>
  </div>
  <div class="col-sm-7">

    <div class="years">
      <% @years.each do |year| %>
        <%= link_to "#{year}年", hilight_diaries_path(year: year), class: "btn btn-primary" %>
      <% end %>
      <%= link_to "隠しも表示", hilight_diaries_path(nosecret: true, year: @year), class: "btn btn-light" %>
    </div>

    <% @diaries.each do |diary| %>
      <h3 id="diary<%= diary.id %>" class="page-header">
        <span class="date"><%= dispdate(diary.record_at, true) %></span><%= " ほど" if diary.is_about_date.present? %>　
        <span class="hilight"><%= link_to diary.title_mod, diary_path(diary) %></span>
        <small><%= tags_link(diary) %></small>
      </h3>
    <div class="well well2">
      <p class="mb25"><%= link_to(image_tag(diary.image(:large), width: "100%", class: "img-thumbnail"), diary.image(:original)) if diary.image.present? %></p>
      <p><%= sani_custom_br(diary.content) %></p>
    </div>
    <% end -%>

 </div>
</div>
